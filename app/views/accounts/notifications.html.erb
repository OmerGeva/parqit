<div class="container mt-5">
  <h1 class="text-center pb-3 pt-3 border-bottom">Notifications</h1>
  <% @notifications.each do |notification| %>
    <div class="col-11 parking-info-user d-flex p-2 align-items-center">
      <%= link_to account_path(notification.booking.user) do%>
        <%= cl_image_tag notification.booking.user.photo, class: 'avatar-large mr-3' %>
      <% end %>
      <div>
        <p class="mb-0"><%= notification.booking.user.full_name %> has booked:</p>
        <p class="mb-0"><strong><%= notification.booking.parking_spot.title %></strong></p>
        <p class="mb-0"><%= notification.booking.date.strftime('%e %B') %> <%= notification.booking.start_time.strftime('%T').match(/^\d{2}:\d{2}/) %>  - <%= notification.booking.end_time.strftime('%T').match(/^\d{2}:\d{2}/)%></p>
        <p class="mb-0"> </p>
      </div>
    </div>
  <% end %>
</div>
