<i class="fas fa-bars color-white" id="open-nav-btn"></i>
<div id="mySidenav" class="sidenav">
  <% if current_user %>
    <ul>
      <li>
        <div class="nav-top pb-3">
          <div class="d-flex justify-content-between mb-3">
            <span></span>
            <h3 id="close-nav-btn" class="m-3"><i class="fas fa-arrow-left color-white"></i></h3>
          </div>
          <div class="p-3">
            <%= link_to account_path(current_user), class: "d-flex align-items-center justify-content-between mouse-hover" do%>
              <%= cl_image_tag current_user.photo, alt: "user avatar", class: "avatar-large" %>
              <h4 class="mb-0"><%= current_user.full_name %></h4>
            <% end %>
          </div>
        </div>
      </li>
      <li class="p-3 border-top">
        <%= link_to notifications_account_path(current_user.account), class: "navbar-img align-items-center justify-content-between d-flex" do %>
          <%= image_tag "http://cdn.onlinewebfonts.com/svg/img_489991.png" %>
          <!-- -------------Figuring out how many unread messages----------------------- -->
          <% counter = 0 %>
          <% unless current_user.parking_spots[0].bookings.empty? %>
          <% current_user.parking_spots.each { |spot| spot.bookings.each { |booking| counter += 1 if booking.notification && booking.notification.seen == false } } %>
          <% end %>
          <!-- ------------------------------------------------------------------------- -->
          <h5 class="mb-0">Notifications (<%= counter %>)</h5>
        <% end %>
      </li>
      <li class="p-3 border-top">
        <%= link_to "/", class: "navbar-img align-items-center justify-content-between d-flex" do %>
          <%= image_tag "https://cdn.onlinewebfonts.com/svg/img_265937.png" %>
          <h5 class="mb-0">Find Parking</h5>
        <% end %>
      </li>
      <li class="p-3 border-top">
        <%= link_to new_account_parking_spot_path(current_user.account.id), class: "navbar-img align-items-center justify-content-between d-flex mouse-hover" do%>
          <%= image_tag "https://pngimage.net/wp-content/uploads/2018/06/plus-icons-png-6.png"%>
          <h5 class="mb-0">Add a new spot</h5>
        <% end %>
      </li>
      <li class="p-3 border-top">
        <%= link_to destroy_user_session_path, class: "navbar-img align-items-center justify-content-between d-flex mouse-hover", method: :delete do%>
          <%= image_tag "https://png.pngtree.com/svg/20170901/logout_584613.png"%>
          <h5 class="mb-0">Log out</h5>
        <% end %>
      </li>
    </ul>
  <% else %>
    <ul>
      <li>
        <div class="nav-top pb-3">
          <div class="d-flex justify-content-between mb-3">
            <span></span>
            <h3 id="close-nav-btn" class="m-3"><i class="fas fa-arrow-left"></i></h3>
          </div>
          <div class="p-3">
            <%= link_to new_user_session_path, class: "d-flex align-items-center justify-content-between navbar-img mouse-hover" do%>
                <%= image_tag "https://www.groundai.com/static/groundai/img/avatar-placeholder.png"%>
              <h4>Log In</h4>
            <% end %>
          </div>
        </div>
      </li>
     <li class="p-3 border-top">
       <%= link_to "/", class: "navbar-img align-items-center justify-content-between d-flex" do %>
         <%= image_tag "https://cdn.onlinewebfonts.com/svg/img_265937.png" %>
         <h5 class="mb-0">Find Parking</h5>
       <% end %>
     </li>
    </ul>
  <% end %>
</div>

